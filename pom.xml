	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.15</version>
				<configuration>
		          <excludes>
		            <exclude>**/hooks/*.java</exclude>
		          </excludes>
          			<forkMode>never</forkMode> <!-- this fixes issue with surefire and report listener hopefully --> 
					<properties>
						<property>
							<!-- <name>listener</name> -->
							<!-- <value>com.redhat.reportengine.client.ReportEngineClientJunitListener</value> -->
						</property>
					</properties>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.surefire</groupId>
						<artifactId>surefire-junit4</artifactId>
						<version>2.15</version>
					</dependency>
				</dependencies>
			</plugin>

                        <!-- to make a jar with all depends...mvn clean compile assembly:single -->
                        <plugin>
                                <artifactId>maven-assembly-plugin</artifactId>
                                <configuration>
                                        <archive>
                                                <manifest>
                                                        <mainClass>fully.qualified.MainClass</mainClass>
                                                </manifest>
                                        </archive>
                                        <descriptorRefs>
                                                <descriptorRef>jar-with-dependencies</descriptorRef>
                                        </descriptorRefs>
                                </configuration>
                        </plugin>

		</plugins>
	</build>
	<profiles>
		<!-- mvn exec:java -P annotated -->
		<profile>
			<id>annotated</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<configuration>
							<classpathScope>test</classpathScope>
							<mainClass>com.redhat.qe.traceability.AnnotatedTestCase</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- mvn -P cleanup exec:java -->
		<profile>
			<id>cleanup</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<configuration>
							<classpathScope>test</classpathScope>
							<mainClass>com.redhat.qe.helpers.cleanup.CleanupTool</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- mvn -P cleanup exec:java -->
		<profile>
			<id>status</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<configuration>
							<classpathScope>test</classpathScope>
							<mainClass>com.redhat.qe.helpers.PollForStatus</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
